{
  "name": "schliesser/sitecrawler",
  "description": "TYPO3 sitemap crawler",
  "type": "typo3-cms-extension",
  "license": "MIT",
  "authors": [
    {
      "name": "Andr√© Buchmann",
      "email": "andy.schliesser@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "typo3/cms-core": "^9.5 || ^10.4 || ^11.4",
    "ext-simplexml": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "typo3/testing-framework": "^4 || ^5 || ^6"
  },
  "autoload": {
    "psr-4": {
      "Schliesser\\Sitecrawler\\": "Classes"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "test": [
      "@test-php-lint",
      "@test-php-cs-fixer",
      "@test-unit"
    ],
    "post-autoload-dump": [
      "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
    ],
    "test-php-lint": [
      ".Build/bin/parallel-lint ./Classes/",
      ".Build/bin/parallel-lint ./Configuration/",
      ".Build/bin/parallel-lint ./Tests/"
    ],
    "test-php-cs-fixer": [
      "php-cs-fixer fix -v --dry-run --using-cache no --diff"
    ],
    "test-php-cs-fixer-fix": [
      "php-cs-fixer fix -v --using-cache no"
    ],
    "test-unit": [
      ".Build/bin/phpunit --configuration Tests/Unit/phpunit.xml"
    ],
    "prepare-release": [
      "rm .gitignore",
      "rm -rf .Build",
      "rm -rf .github",
      "rm -rf Tests",
      "rm .editorconfig",
      "rm .gitattributes",
      "rm .php-cs-fixer.php",
      "rm .php_cs.dist"
    ]
  },
  "extra": {
    "typo3/cms": {
      "web-dir": ".Build",
      "extension-key": "sitecrawler"
    }
  }
}
